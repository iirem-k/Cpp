/* #include<iostream>
using namespace std;

struct Distance {
    int feet;
    float inches;
};

int main() {
    Distance d1, d3;
    Distance d2 = {11, 6.25};

    cout << "Enter feet: ";
    cin >> d1.feet;

    cout << "Enter inches: ";
    cin >> d1.inches;

    // Inches toplama ve feet'e dönüştürme
    d3.inches = d1.inches + d2.inches;
    d3.feet = 0;
    if (d3.inches >= 12.0) { // 12 inç = 1 fit
        d3.inches -= 12.0;
        d3.feet++;
    }

    // Feet toplama
    d3.feet += d1.feet + d2.feet;

    // Sonuçları yazdırma
    cout << d1.feet << "\'-" << d1.inches << "\" + ";
    cout << d2.feet << "\'-" << d2.inches << "\" = ";
    cout << d3.feet << "\'-" << d3.inches << "\"" << endl;

    return 0;
} */
