#include<iostream>
using namespace std;
int main(){
    int sayi;
    int faktoriyel=1;
    cout<<"sayı girin:"; cin>>sayi;
  
      if(sayi==0){
     cout<<sayi<<" faktöriyel değeri "<<faktoriyel<<"'dir.";}
     
    for(int i=sayi; 1<=i; i--){
        faktoriyel*=i;  
        
    }
      cout<<sayi<<" faktöriyel değeri: "<< faktoriyel;
  
     return 0;
 }
